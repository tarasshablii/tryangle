{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "vitest-globals/env": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "vitest-globals"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "import/no-unresolved": ["error", {
      "ignore": ["vitest/config"]
    }]
  },
  "ignorePatterns": ["dist/*"]
}
